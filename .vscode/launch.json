    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Run Backend (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "args": [
                "backend.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}